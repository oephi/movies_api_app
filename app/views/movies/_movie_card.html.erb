 
 <div class="row">
    <div class="col s12 m5">
      <div class="card">
        <div class="card-image"> 
        <img src=<%= (movie.image) %>>
        </div>
        <div class="card-content">
        <table>
            <tbody>
                <tr>
                    <td>Release Date: </td>
                    <td><%= movie.release_date %></td>
                </tr>
                <tr>
                    <td>Genre: </td>   
                    <td><%= movie.genre %></td>
                </tr>
                <tr>
                    <td>Runtime: </td>
                    <td><%= movie.runtime %></td>
                </tr>
                <tr>
                    <td>Plot: </td>
                    <td><%= movie.plot %></td>
                </tr>
            </tbody>       
        </table>
        </div>
        <div class="card-action">
          <a href=<%="https://www.imdb.com/title/#{movie.imdb_id}"%> target="_blank">This is a link</a>
        </div>
      </div>
    </div>
  </div>
